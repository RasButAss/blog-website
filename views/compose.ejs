<%- include('partials/header') -%> 
<h1>Compose</h1>
<form action="/compose" method="post">
    <label for="input1" class="form-label" id="titleLabel">Title</label>
    <input type="text" class="form-control" id="input1" name="postTitle">
    <br>
    <label for="input2" class="form-label" id="contentLabel">Post</label>
    <textarea name="postBody" id="post" cols="30" rows="5" class="form-control"></textarea>
    <br>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>
